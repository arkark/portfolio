{
  "name": "portfolio",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "npm run build && vite preview",
    "lint": "npm run lint:typecheck && npm run lint:eslint && npm run lint:prettier",
    "lint:typecheck": "tsc",
    "lint:eslint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:prettier": "prettier '**/*.{ts,tsx,json,cjs}' --check",
    "fix": "npm run fix:eslint && npm run fix:prettier",
    "fix:eslint": "eslint . --report-unused-disable-directives --max-warnings 0 --fix",
    "fix:prettier": "prettier '**/*.{ts,tsx,json,cjs}' --write"
  },
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "daisyui": "^4.12.24",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^7.3.0"
  }
}
